pipeline {
   agent any

   stages {
      stage('Verify branch') {
         steps {
            echo "$GIT_BRANCH"
         }
      }

      stage('Docker stage') {
         steps {
            sh 'docker images -a'
            sh '''
              cd azure-vote
              docker images -a
              docker build -t jenkins-pipeline .
              docker images -a
              cd ..
            '''
         }
      }

      stage('Start test app') {
          steps{
              sh '''
                docker-compose up -d
                ./scripts/test_container.ps1
              '''
          }
          post{
              success{
                echo "App started successfully"
              }
              failure{
                  echo "App start failed"
              }
          }
      }
      stage('Run tests'){
          steps{
              sh '''
                  pytest ./tests/test_sample.py
              '''
          }
      }
      stage('Stop test app'){
          steps{
              sh '''
                  docker-compaose down
              '''
          }
      }
   }
}
